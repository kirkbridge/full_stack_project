<h1>Products</h1>

<div class="product">
  <% @products.each do |product| %>
  <h3>Title: <%= product.title %></h3>
  <p>Description: <%= product.description %></p>
  <p>Price: <%= "$#{product.price}"%></p>
  <p>In Stock: <%=product.stock_quantity%></p>
  <%= image_tag product.image.thumb.url%>

  <% end%>
</div>
