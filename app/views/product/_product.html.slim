.card.bg-light.mb-3.border-primary.product
  .card-body
    .card-block
      h3.card-title= product.title
    .card-block
      = image_tag(product.image.thumb.url,class: "card-img-top")
    .card-block
      h4.card-subtitle.text-muted
        | Category: #{product.category.name}
    .card-block.description
      p.card-text
        | Description: #{product.description}
    .card-block
      p.card-text
        | Price: #{"$#{product.price}"}
    .card-block
      p.card-text
        | In Stock: #{product.stock_quantity}
    .card-block
      a.btn.btn-primary href="#"  Add to Cart
